<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/sign_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/logo"
        android:layout_gravity="center_vertical" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="16dp">

        <TextView
            android:id="@+id/sign_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Traffic Sign Name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/sign_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Traffic Sign Code"
            android:textColor="#617D59"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/sign_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Traffic Sign Description"
            android:textColor="#617D59"
            android:textSize="14sp" />

    </LinearLayout>
</LinearLayout>
